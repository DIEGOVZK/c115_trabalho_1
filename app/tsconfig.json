{
    "compilerOptions": {
        // Configurations related to module resolution
            "module": "Node16",
            "moduleResolution": "Node16",
            "allowSyntheticDefaultImports": true,
            "esModuleInterop": true,
            "resolveJsonModule": true,
            "isolatedModules": true,

        // Configurations related to code generation
            "target": "es2017",
            "outDir": "build",
            "rootDir": "src",
            "allowJs": true,
            "noEmit": false,

        // Configurations related to type checking and strictness
            "strict": false,
            "noImplicitAny": true,
            "noFallthroughCasesInSwitch": true,
            "forceConsistentCasingInFileNames": true,
            "preserveConstEnums": true,
            "skipLibCheck": true,
            "alwaysStrict": false,
            "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist", "coverage", "tests"]
}